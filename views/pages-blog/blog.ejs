<%- include ('../partials/head', {titlePage:"xXx"}) %>

  <body class="container">
    <header><%- include('../partials/header') %></header>
    <nav><%- include('../partials/nav') %></nav>
    <main>
      <p>
        <%= post.id %>
      </p>
      <p>
        <%= post.title %>
      </p>
      <p>
        <%= post.text %>
      </p>

      <!-- In any EJS template -->
      <% if (isAuthenticated) { %>
        <p>You are logged in!</p>
        <% } else { %>
          <p>You are not logged in.</p>
          <% } %>

            <p>Add a comment</p>
            <form action="/blogs/comment/<%= post.id %>" method="post">
              <input type="text" name="comment" id="comment" placeholder="some comment">
              <button type="submit">Send comment</button>
            </form>
            <% if (post.comments && post.comments.length> 0) { %>
              <h2>comments</h2>
            <% post.comments.forEach(comment=> { %>
                <li><%= comment %></li>
            <% }) %>
            <% } %>
    </main>
    <footer><%- include('../partials/footer') %></footer>
  </body>

  </html>